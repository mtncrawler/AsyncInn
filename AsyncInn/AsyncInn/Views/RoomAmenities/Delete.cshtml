@model AsyncInn.Models.RoomAmenities

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<h2>Remove Room Amenity</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Amenity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Amenity.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Rooms)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rooms.Name)
